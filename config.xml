<?xml version='1.0' encoding='utf-8'?>
<widget id="com.riv.Visitar" version="1.0.2" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Visitar</name>
    <description>
        An app for viewing AR and VR tours.
    </description>
    <author email="contact@revolutioninteractivevideo.com" href="http://revolutioninteractivevideo.com">
        Revolution Interactive Video
    </author>
    <content src="index.html" />
    <icon src="www/img/logo.png" />
    <allow-navigation href="http://revolutioninteractivevideo.com/*" />
    <access origin="http://revolutioninteractivevideo.com/*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <feature name="http://api.phonegap.com/1.0/network" />
    <feature name="http://api.phonegap.com/1.0/file" />
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <preference name="AndroidPersistentFileLocation" value="Internal" />
    <preference name="iosPersistentFileLocation" value="Library" />
    <preference name="AllowInlineMediaPlayback" value="true" />
    <preference name="BackupWebStorage" value="none" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="android-minSdkVersion" value="14" />
    <preference name="android-targetSdkVersion" value="19" />
    <platform name="android">
        <splash qualifier="land-hdpi" src="landscape-hdpi.png" />
        <splash qualifier="land-ldpi" src="landscape-ldpi.png" />
        <splash qualifier="land-mdpi" src="landscape-mdpi.png" />
        <splash qualifier="land-xhdpi" src="landscape-xhdpi.png" />
        <splash qualifier="land-xxhdpi" src="landscape-xxhdpi.png" />
        <splash qualifier="port-hdpi" src="portrait-hdpi.png" />
        <splash qualifier="port-ldpi" src="portrait-ldpi.png" />
        <splash qualifier="port-mdpi" src="portrait-mdpi.png" />
        <splash qualifier="port-xhdpi" src="portrait-xhdpi.png" />
        <splash qualifier="port-xxhdpi" src="portrait-xxhdpi.png" />
    </platform>
    <platform name="ios">
        <splash height="480" src="Default.png" width="320" />
        <splash height="960" src="Default@2x.png" width="640" />
        <splash height="1136" src="Default-568h@2x.png" width="640" />
        <splash height="1334" src="Default-667h@2x.png" width="750" />
        <splash height="2208" src="Default-Portrait-736h@3x.png" width="1242" />
        <splash height="1242" src="Default-Landscape-736h@3x.png" width="2208" />
        <splash height="1024" src="Default-Portrait.png" width="768" />
        <splash height="768" src="Default-Landscape.png" width="1024" />
        <splash height="2048" src="Default-Portrait@2x.png" width="1536" />
        <splash height="1536" src="Default-Landscape@2x.png" width="2048" />
    </platform>
    <splash src="splash.png" />
    <preference name="SplashScreen" value="screen" />
    <preference name="SplashScreenDelay" value="6800" />
    <preference name="SplashMaintainAspectRatio" value="true" />
    <preference name="xwalkVersion" value="16+" />
    <preference name="xwalkCommandLine" value="--disable-pull-to-refresh-effect" />
    <preference name="xwalkMode" value="embedded" />
    <preference name="xwalkMultipleApk" value="true" />
</widget>
